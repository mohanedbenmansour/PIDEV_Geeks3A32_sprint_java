<AnchorPane id="AnchorPane" prefHeight="590.0" prefWidth="999.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.product.IndexController">
   <children>
