        <columns>
          <TableColumn fx:id="name" prefWidth="105.0" text="Name" />
          <TableColumn fx:id="description" prefWidth="240.0" text="Description" />
            <TableColumn fx:id="price" prefWidth="125.0" text="Price" />
            <TableColumn fx:id="categorie" prefWidth="232.0" text="Categorie" />
        </columns>
      </TableView>
      <Label layoutX="240.0" layoutY="25.0" prefHeight="49.0" prefWidth="344.0" text="Liste des produits">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" layoutY="7.0" prefHeight="581.0" prefWidth="200.0" style="-fx-background-color: white;">
         <children>
            <Button mnemonicParsing="false" onAction="#showCategory" prefHeight="42.0" prefWidth="186.0" text="Categorie" />
            <Label />
