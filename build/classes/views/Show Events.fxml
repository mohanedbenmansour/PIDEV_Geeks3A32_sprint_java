<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShowEventsController">
   <children>
      <PieChart fx:id="EventPieChart" layoutX="403.0" layoutY="88.0" prefHeight="405.0" prefWidth="453.0" />
      <TableView fx:id="tvEvents" layoutX="27.0" layoutY="99.0" onMouseClicked="#showSelectedEvent" prefHeight="421.0" prefWidth="378.0">
        <columns>
          <TableColumn fx:id="eventsColNom" prefWidth="75.0" text="Nom" />
            <TableColumn fx:id="eventsColLieu" prefWidth="75.0" text="Lieu" />
            <TableColumn fx:id="eventsColDateDebut" prefWidth="75.0" text="Date Début" />
            <TableColumn fx:id="eventsColDateFin" prefWidth="75.0" text="Date Fin" />
            <TableColumn fx:id="eventsColPrix" prefWidth="75.0" text="Prix" />
        </columns>
      </TableView>
      <Label fx:id="eventShowTitle" layoutX="405.0" layoutY="31.0" text="Evènements">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="eventShowNom" alignment="CENTER" layoutX="477.0" layoutY="72.0" prefHeight="20.0" prefWidth="271.0" text="Nom">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <Label fx:id="eventShowDatePub" alignment="CENTER" layoutX="468.0" layoutY="101.0" prefHeight="17.0" prefWidth="305.0" text="DatePub" textAlignment="CENTER" textFill="#909090">
         <font>
            <Font name="Times New Roman Italic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="eventShowDateDeb" alignment="CENTER" layoutX="481.0" layoutY="130.0" prefHeight="15.0" prefWidth="93.0" text="Date deb" textAlignment="CENTER">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </Label>
      <Label fx:id="eventShowDateFin" alignment="CENTER" layoutX="647.0" layoutY="130.0" prefHeight="15.0" prefWidth="81.0" text="Date fin">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </Label>
      <ImageView fx:id="eventShowImg" fitHeight="176.0" fitWidth="293.0" layoutX="468.0" layoutY="155.0" pickOnBounds="true" />
      <Label fx:id="eventShowDesc" alignment="TOP_CENTER" layoutX="451.0" layoutY="341.0" prefHeight="176.0" prefWidth="328.0" text="Description" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Times New Roman" size="13.0" />
         </font>
      </Label>
      <Button fx:id="btnEventAdd" layoutX="25.0" layoutY="59.0" mnemonicParsing="false" onAction="#GoToAddEvent" prefHeight="45.0" prefWidth="93.0" style="-fx-background-color: none;" text="Ajouter">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/add.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="eventSearch" layoutX="231.0" layoutY="69.0" promptText="Rechercher...">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font>
      </TextField>
      <Button fx:id="EventStatButton" layoutX="159.0" layoutY="534.0" mnemonicParsing="false" onAction="#ShowHideStat" text="Statistiques">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/stat.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnEventDelete" layoutX="661.0" layoutY="532.0" mnemonicParsing="false" onAction="#deleteEvent" prefHeight="45.0" prefWidth="113.0" style="-fx-background-color: none;" text="Supprimer">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/delete.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btnEventEdit" layoutX="477.0" layoutY="532.0" mnemonicParsing="false" onAction="#GoToEditEvent" prefHeight="45.0" prefWidth="113.0" style="-fx-background-color: none;" text="Modifier">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/edit.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </Button>
      <Label fx:id="eventShowCategory" alignment="CENTER" layoutX="728.0" layoutY="74.0" prefHeight="20.0" prefWidth="67.0" style="-fx-background-color: #82CAFF; -fx-background-radius: 5;" text="Category" textAlignment="CENTER" />
   </children>
</AnchorPane>
